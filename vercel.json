{
  "version": 2,
  "buildCommand": "npm run build",
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/admin", "destination": "/admin/" },
    { "source": "/admin/auth/(.*)", "destination": "/api" },
    { "source": "/admin/api/(.*)", "destination": "/api" },
    { "source": "/admin/login", "destination": "/api" },
    { "source": "/admin/login/", "destination": "/api" },
    { "source": "/admin/assets/(.*)", "destination": "/dashboard/dist/assets/$1" },
    { "source": "/admin/(.*)", "destination": "/dashboard/dist/index.html" },
    { "source": "/api/(.*)", "destination": "/api" },
    { "source": "/(.*)", "destination": "/api" }
  ]
}
